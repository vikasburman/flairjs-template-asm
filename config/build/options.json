{
    "dest": "./dist",
    "src": "./src",
    "cache": "./temp",

    "customBuild": false,
    "customBuildConfig": "./config/build/custom.json",

    "packaged": true,

    "fullBuild": false,
    "clean": true,
    "skipBumpVersion": false,
    "suppressLogging": false,

    "lint": true,
    "lintConfig": "./config/build/lint.json",
    "lintTypes": ["js", "css", "html"],

    "minify": true,
    "minifyConfig": "./config/build/minify.json",
    "minifyTypes": ["js", "css", "html"],
    "generateJSSourceMap": false,

    "gzip": true,
    "gzipConfig": "./config/build/gzip.json",
    "gzipTypes": ["js", "css", "html", "txt", "xml", "md", "json", "svg", "jpg", "jpeg", "gif", "png"],

    "lintAssets": true,
    "minifyAssets": true,
    "gzipAssets": true,
    
    "lintResources": true,
    "minifyResources": true,
    "utf8EncodeResourceTypes": ["txt", "xml", "js", "md", "json", "css", "html", "svg"],

    "depsConfig": "./config/build/deps.json",
    "preBuildDeps": true,
    "postBuildDeps": true
}
